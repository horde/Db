{
    "name": "horde/db",
    "description": "Database abstraction library",
    "type": "library",
    "homepage": "https://www.horde.org/libraries/Horde_Db",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Jan Schneider",
            "email": "jan@horde.org",
            "role": "lead"
        },
        {
            "name": "Mike Naberezny",
            "email": "mike@naberezny.com",
            "role": "lead"
        },
        {
            "name": "Chuck Hagenbuch",
            "email": "chuck@horde.org",
            "role": "lead"
        }
    ],
    "time": "2021-11-19",
    "repositories": [
        {
            "type": "composer",
            "url": "https://horde-satis.maintaina.com/"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "horde/date": "^3",
        "horde/exception": "^3",
        "horde/support": "^3",
        "horde/util": "^3"
    },
    "require-dev": {
        "horde/test": "^3",
        "horde/autoloader": "^3",
        "horde/cache": "^3",
        "horde/log": "^3"
    },
    "suggest": {
        "horde/autoloader": "^3",
        "horde/cache": "^3",
        "horde/log": "^3",
        "ext-mysql": "*",
        "ext-mysqli": "*",
        "ext-oci8": "*",
        "ext-PDO": "*"
    },
    "autoload": {
        "psr-0": {
            "Horde_Db": "lib/"
        },
        "psr-4": {
            "Horde\\Db\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Horde\\Db\\Test\\": "test/"
        }
    },
    "bin": [
        "bin/horde-db-migrate-component"
    ],
    "minimum-stability": "dev"
}
